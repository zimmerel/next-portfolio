{
  "name": "zmrl-portfolio-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint packages/*/ apps/*/",
    "test": "jest --watch",
    "apps:dev": "pnpm --filter ./apps/** dev"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ],
    "ignorePatterns": [
      "node_modules",
      "dist"
    ],
    "settings": {
      "next": {
        "rootDir": [
          "apps/*/"
        ]
      }
    }
  },
  "engines": {
    "pnpm": ">=7.7.1"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "eslint": "8.20.0",
    "eslint-config-next": "12.2.3",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.3",
    "pnpm": "^7.8.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
